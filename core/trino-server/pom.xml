                            <files>
                                <file>${project.build.directory}/${project.artifactId}-${project.version}.tar.gz</file>
                            </files>
                        </requireFilesSize>
                    </rules>
                </configuration>
                <executions>
                    <execution>
                        <phase>verify</phase>
